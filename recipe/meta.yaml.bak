{% set name = "vscode-python" %}
{% set version = "2021.1.502429796" %}

package:
  name: {{ name|lower }}
  version: {{ version|replace("-", "_") }}

source:
  url: https://github.com/microsoft/{{ name }}/archive/{{ version }}.tar.gz
  sha256: 1c24f803889f3873a56e1415e286f223bfe508caf30670cbbbc61d8f84e85d60

build:
  number: 0
  skip: true  # [not osx]
  ignore_run_exports:
    # node-canvas is built but not installed, so ignore its dependencies
    - cairo
    - giflib
    - libglib
    - libjpeg-turbo
    - pango
    - pixman

requirements:
  build:
    - {{ compiler('cxx') }}
    - cmake
    - make
  host:
    - python
    - pip
    - poetry
    - packaging
    - nodejs 12  # [not (osx and arm64)]
    - nodejs 15  # [osx and arm64]
    - code-server >=3.9
    - vscode-jupyter
    # As part of the build, we are compiling node-canvas from source
    - pixman
    - giflib
    - glib
    - cairo
    - pango
    - libjpeg-turbo
  run:
    - python
    - code-server >=3.9
    - vscode-jupyter

test:
  commands:
    - code-server --list-extensions --show-versions | grep ms-python.python

about:
  home: https://github.com/microsoft/vscode-python
  license: MIT
  license_family: MIT
  license_file:
    - LICENSE
    - ThirdPartyNotices-Distribution.txt
    - ThirdPartyNotices-Repository.txt
  summary: Python extension for Visual Studio Code

extra:
  recipe-maintainers:
    - conda-forge/code-server
